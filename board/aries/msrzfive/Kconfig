if TARGET_MSRZFIVE

config SYS_CPU
	default "rzfive"

config SYS_BOARD
	default "msrzfive"

config SYS_VENDOR
	default "aries"

config SYS_SOC
	default "rzmpu"

config SYS_CONFIG_NAME
	default "msrzfive"

config ENV_SIZE
	default 0x2000 if ENV_IS_IN_SPI_FLASH

config ENV_OFFSET
	default 0x140000 if ENV_IS_IN_SPI_FLASH

config SPL_TEXT_BASE
	default 0x00012000

config SPL_OPENSBI_LOAD_ADDR
	default 0x44000000

config BOARD_SPECIFIC_OPTIONS # dummy
	def_bool y
	select RISCV_NDS
	select SUPPORT_SPL


config DEBUG_RZF_FPGA
	bool "FPGA DEBUG option"
	default n
	help
		DEBUG Flag on FPGA Board

config DEBUG_OPENSBI
	bool "debug OpenSBI"
	default n
	depends on CMD_SBI

